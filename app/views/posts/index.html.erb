<h1>Recent Posts</h1>

<div class="container">
  <div class="row">
    <% @posts.each do |post|%>
    <div class="col-sm-10">

      <h2><%= post.title%></h2>
      
      <p>
        <%= post.publishDate%>
      </p>

      <p>
        <%= post.author %>
      </p>
      
      <%= image_tag(post.image_name, class: "img-responsive img-width")%>
      
      <h3>
        <%= post.description%>  
      </h3>
      
        <p><%= link_to 'Show', post %></p>
        <p><%= link_to 'Edit', edit_post_path(post) %></p>
        <p><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          </div>
          <%end%>
        </div>
        <%= will_paginate @posts%>
      </div>

<br>

<%= link_to 'New Post', new_post_path %>