<div class="container">    
        <div class= "row">
          <%= image_tag(@post.image_name, class: "img-responsive img-width")%>
          <div class= "col-sm-10 col-md-5">
            <p>
              <strong>Title:</strong>
              <%= @post.title %>
            </p>

            <p>
              <small>Author:</small>
              <%= @post.author %>
            </p>

            <p>
              <strong>Publishdate:</strong>
              <%= @post.publishDate %>
            </p>

            <p>
              <strong>Content:</strong>
              <%= @post.content %>
            </p>

            <%= render 'new_review'%>
            <%= render 'reviews'%>
            <%= will_paginate @reviews%>

            <%= link_to 'Edit', edit_post_path(@post) %> |
            <%= link_to 'Back', posts_path %>
          </div>
        </div>
</div>        