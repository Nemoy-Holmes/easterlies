<p id="notice"><%= notice %></p>

<h1>Recent Posts</h1>

<div class="container">
  <div class="row">
    <% @products.each do |product|%>
    <div class="col-sm-10">
      <h2><%= product.title%></h2>
      <p>
        <%= product.dateOfPublish%>
      </p>
      <%= image_tag(product.image_name, class: "img-responsive img-width")%>
      <h3>
        <%= product.description%>
        
      </h3>
      

        <p><%= link_to 'Show', product %></p>
        <p><%= link_to 'Edit', edit_product_path(product) %></p>
        <p><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></p>
          </div>
          <%end%>
        </div>
      </div>

